/*宝库晃动动画*/
.mh_treasury_nr_aanimation {
    animation: treasury 0.5s ease-in-out;
}

@keyframes treasury {
    0% {
        transform: rotate(-8deg);
        transform-origin: center bottom
    }
    17% {
        transform: rotate(0deg);
        transform-origin: center bottom
    }
    34% {
        transform: rotate(8deg);
        transform-origin: center bottom
    }
    51% {
        transform: rotate(-8deg);
        transform-origin: center bottom
    }
    68% {
        transform: rotate(0deg);
        transform-origin: center bottom
    }
    85% {
        transform: rotate(8deg);
        transform-origin: center bottom
    }
    100% {
        transform: rotate(0deg);
        transform-origin: center bottom
    }
}


