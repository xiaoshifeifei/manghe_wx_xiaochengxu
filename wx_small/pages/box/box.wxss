/*飞发货车动画重写*/
.mh_box_aanimation_02 {
    animation: mobile6 2s ease-in-out;
    -webkit-animation: mobile6 2s ease-in-out;
    opacity: 0;
    z-index: 111;
}

@keyframes mobile6 {
    0% {
        transform: translate(-50%, -50%) scale(0.2, 0.2);
        opacity: 0;
    }
    25% {
        transform: translate(-50%, -50%) scale(1.2, 1.2);
        opacity: 1;
    }
    30% {
        transform: translate(-50%, -50%) scale(1.2, 1.2);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, -50%) scale(1, 1);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, -50%) scale(1, 1) rotate(0deg);
        opacity: 1;
    }
    90% {
        transform: translate(-10%, 250%) scale(0.5, 0.5) rotate(350deg);
        opacity: 1;
    }
    100% {
        transform: translate(-10%, 320%) rotate(360deg) scale(0.1, 0.1);
        opacity: 0.5;
    }
}

@-webkit-keyframes mobile6 {
    0% {
        transform: translate(-50%, -50%) scale(0.2, 0.2);
        opacity: 0;
    }
    25% {
        transform: translate(-50%, -50%) scale(1.2, 1.2);
        opacity: 1;
    }
    30% {
        transform: translate(-50%, -50%) scale(1.2, 1.2);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, -50%) scale(1, 1);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, -50%) scale(1, 1) rotate(0deg);
        opacity: 1;
    }
    90% {
        transform: translate(-10%, 250%) scale(0.5, 0.5) rotate(350deg);
        opacity: 1;
    }
    100% {
        transform: translate(-10%, 320%) rotate(360deg) scale(0.1, 0.1);
        opacity: 0.5;
    }
}

