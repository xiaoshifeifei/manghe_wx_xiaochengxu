.mh_pop_new_nr {
    width: 620rpx;
    height: 800rpx;
    border-radius: 20rpx;
    background: #ffffff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}

.mh_pop_new {
    width: 100%;
    height: 370rpx;
    font-size: 46rpx;
    position: relative;
}

.mh_pop_new_01 {
    width: 100%;
    height: 100rpx;
    background: #3d62ad;
    border-radius: 20rpx 20rpx 0 0;
    color: #fff;
    line-height: 100rpx;
    font-size: 34rpx;
    text-align: center;
}

.mh_pop_new_02 {
    margin: 10rpx 30rpx 10rpx 30rpx;
    font-size: 34rpx;
    height: 360rpx;
    overflow: auto;
}

.mh_pop_new_02 p {
    display: block;
    font-size: 26rpx;
    color: #939393;
    line-height: 50rpx;
}

.mh_pop_new_tab {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    width: 100%;
    font-size: 26rpx;
}

.mh_pop_new_tab view {
    width: 50%;
    float: left;
}

.mh_pop_new_tab_hover text {
    padding: 0 20rpx;
    border-bottom: 6rpx solid #3d62ad;
    padding-bottom: 12rpx;
}


.mh_me_aanimation_03 {
    animation: mobile3 2s ease-in-out;
    opacity: 0;
}

@keyframes mobile3 {
    0% {
        transform: translate(-50%, 50%) scale(0.2, 0.2);
        opacity: 0;
    }
    25% {
        transform: translate(-50%, 50%) scale(1.2, 1.2);
        opacity: 1;
    }
    30% {
        transform: translate(-50%, 50%) scale(1.2, 1.2);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, 50%) scale(1, 1);
        opacity: 1;
    }
    60% {
        transform: translate(-50%, 50%) scale(1, 1) rotate(0deg);
        opacity: 1;
    }
    90% {
        transform: translate(20%, 100%) scale(0.5, 0.5) rotate(-350deg);
        opacity: 1;
    }
    100% {
        transform: translate(0%, 160%) rotate(-360deg) scale(0.1, 0.1);
        opacity: 0.5;
    }
}